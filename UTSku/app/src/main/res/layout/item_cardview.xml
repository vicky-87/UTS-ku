<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="150dp"
        android:layout_width="match_parent">

    <ImageView
        android:id="@+id/img_card"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="0dp"
        android:layout_width="100dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" android:id="@+id/tv_nama_card"
        app:layout_constraintStart_toEndOf="@+id/img_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Name" android:layout_marginEnd="8dp"
        android:textSize="20sp" android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_desc_card"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="lorem" android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_card"
        android:ellipsize="end" android:maxLines="3"/>

    <Button
        android:id="@+id/button"
        android:layout_marginBottom="8dp"
        android:layout_height="35dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Detail"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_launcher_background"
        android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>